# Production Environment Variables
# Copy this file to .env.prod and fill in the actual values

# Database Configuration
POSTGRES_DB=moneytrack
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Backend Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Docker Images (automatically set by CI/CD)
BACKEND_IMAGE=ghcr.io/akukharev/money-track/backend:latest
FRONTEND_IMAGE=ghcr.io/akukharev/money-track/frontend:latest

# SSL Configuration
DOMAIN=your-domain.com
EMAIL=your-email@domain.com

# Frontend Build Variables (set in CI/CD)
REACT_APP_API_URL=https://your-domain.com/api
REACT_APP_AI_WEBHOOK_URL=https://your-n8n-webhook-url.com/webhook/chat